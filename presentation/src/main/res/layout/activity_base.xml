<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/state_bar_and_tab_layout_height"
    tools:context=".features.fake.FakeActivity">

    <FrameLayout
        android:id="@+id/fl_container"
        style="@style/Constraint.Any.MatchParent"/>

    <ViewStub
        android:id="@+id/vs_loading"
        style="@style/Constraint.MatchParent"
        android:inflatedId="@+id/v_loading"
        android:layout="@layout/part_loading"/>

    <ViewStub
        android:id="@+id/vs_error"
        style="@style/Constraint.MatchParent"
        android:inflatedId="@+id/v_error"
        android:layout="@layout/part_error"/>

    <ViewStub
        android:id="@+id/vs_retry"
        style="@style/Constraint.MatchParent"
        android:inflatedId="@+id/v_retry"
        android:layout="@layout/part_retry"/>
</androidx.constraintlayout.widget.ConstraintLayout>
