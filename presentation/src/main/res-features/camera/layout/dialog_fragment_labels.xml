<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="330dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_close"
            style="@style/ImageButton.Vector.Button"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/md_one_unit"
            android:layout_marginTop="@dimen/md_one_unit"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_clear"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_labels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/md_one_unit"
            android:layout_marginTop="@dimen/md_one_unit"
            tools:itemCount="4"
            tools:listitem="@layout/item_label"/>
    </LinearLayout>
</LinearLayout>
