<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <smash.ks.com.oneshoot.widgets.customize.camera.view.CameraView
        android:id="@+id/cv_camera"
        style="@style/Constraint.Any.MatchParent"
        android:adjustViewBounds="true"
        android:background="@android:color/black"/>

    <smash.ks.com.oneshoot.widgets.customize.selectable.SelectableAreaView
        android:id="@+id/sav_selection"
        style="@style/Camera.Area.Selection"
        app:layout_constraintBottom_toBottomOf="@+id/cv_camera"
        app:layout_constraintEnd_toEndOf="@+id/cv_camera"
        app:layout_constraintStart_toStartOf="@+id/cv_camera"
        app:layout_constraintTop_toTopOf="@+id/cv_camera"/>

    <View
        android:id="@+id/v_control_bkg"
        android:layout_width="@dimen/md_zero_unit"
        android:layout_height="88dp"
        android:background="@color/dodger_blue_alpha_33"
        app:layout_constraintBottom_toBottomOf="@+id/cv_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="@dimen/md_eight_unit"
        android:layout_height="@dimen/md_zero_unit"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ib_shot"
        app:layout_constraintEnd_toStartOf="@id/ib_shot"
        app:layout_constraintStart_toStartOf="@+id/cv_camera"
        app:layout_constraintTop_toTopOf="@+id/ib_shot"/>

    <ImageButton
        android:id="@+id/ib_shot"
        app:layout_constraintTop_toTopOf="@+id/v_control_bkg"
        style="@style/Camera.Button.Shot"/>

    <ImageButton
        android:id="@+id/ib_flash"
        style="@style/Camera.Button.Flash"
        app:layout_constraintBottom_toBottomOf="@+id/ib_shot"
        app:layout_constraintEnd_toEndOf="@id/cv_camera"
        app:layout_constraintStart_toEndOf="@+id/ib_shot"
        app:layout_constraintTop_toTopOf="@+id/ib_shot"/>
</androidx.constraintlayout.widget.ConstraintLayout>
